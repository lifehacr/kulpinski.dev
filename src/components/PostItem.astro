---
import { formatDate } from "@curiousleaf/utils"
import type { CollectionEntry } from "astro:content"

type Props = CollectionEntry<"posts">["data"] & {
  url: string
}

const { url, title, pubDate } = Astro.props
---

<li>
  <a href={url} title={title} class="group flex min-w-0 items-start gap-4 py-1">
    <p class="text-sm group-hover:underline">
      {title}
    </p>

    <span class="mt-3.5 h-px min-w-[2rem] flex-1 bg-current opacity-15"></span>

    <time datetime="2020-03-16" class="mt-1.5 shrink-0 text-xs text-neutral-500">
      {formatDate(pubDate)}
    </time>
  </a>
</li>
