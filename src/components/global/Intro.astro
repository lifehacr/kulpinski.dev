---
import type { HTMLAttributes } from "astro/types"
import Prose from "~/components/global/Prose.astro"

type Props = HTMLAttributes<"div"> & {
  title?: string
}

const { class: className, title, ...props } = Astro.props
---

<div class:list={[className, "flex flex-col items-start gap-4"]} {...props}>
  {
    title && (
      <h1 class="font-display text-balance text-3xl font-semibold tracking-tight md:text-3xl">
        {title}
      </h1>
    )
  }

  {
    Astro.slots.has("description") && (
      <Prose class="-mt-2">
        <slot name="description" />
      </Prose>
    )
  }

  <slot />
</div>
