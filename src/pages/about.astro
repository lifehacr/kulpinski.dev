---
import { getCollection } from "astro:content"
import BaseLayout from "~/layouts/BaseLayout.astro"
import PostList from "~/components/PostList.astro"
import EntriesOne from "~/components/entries/EntriesOne.astro"
const allPosts = await getCollection("posts")

// Sort posts by date in descending order (newest first)
const sortedPosts = allPosts.sort(
  (a, b) => new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf()
)

const title = "About me"
---

<BaseLayout title={title}>
  <section class="space-y-2">
    <h3 class="font-display font-medium">{title}</h3>

    <div class="prose-styles">
      <ul class="text-sm">
        <li>born in late 80s in the beautiful city of Krakow</li>
        <li>programmer-turned-solopreneur</li>
        <li>15+ years of experience</li>
        <li>working with companies big and small</li>
        <li>working locally and globally</li>
        <li>interested in software, seo, open source & ai</li>
        <li>passionate about minimalism & simplicity</li>
        <li>built and shipped a lot of useful <a href="/projects">web projects</a></li>
      </ul>
    </div>
  </section>
</BaseLayout>
