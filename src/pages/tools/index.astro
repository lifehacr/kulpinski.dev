---
import { getCollection } from "astro:content"
import BaseLayout from "~/layouts/BaseLayout.astro"
import ToolList from "~/components/ToolList.astro"
const allTools = await getCollection("tools")

// Sort tools by title in ascending order (alphabetically)
const sortedTools = allTools.sort((a, b) => a.data.title.localeCompare(b.data.title))

const title = "Tools I Use"
const description =
  "Personal set of tools, apps, and software I use in my startup journey. I update this list as I find new tools or apps that I like. Most of them are paid, but offer a generous free tier."
---

<BaseLayout title={title} description={description}>
  <ToolList title={title} description={description} tools={sortedTools} />
</BaseLayout>
